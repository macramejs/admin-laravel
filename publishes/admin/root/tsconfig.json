{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "paths": {
        "@admin/*": ["./resources/admin/js/*"],
        "@app/*": ["./resources/app/js/*"],
    }
  },
  "include": [
    "resources/app/js/**/*",
    "resources/admin/js/**/*"
  ],
  "exclude": [
      "node_modules"
  ],
  "files": [
    "shims-vue.d.ts",
  ]
}
